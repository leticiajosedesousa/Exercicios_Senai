numero = '10'
while numero != '0':
    numero = input('digite um numero: ')
    if numero == '1':
        print('domingo')
    elif numero == '2':
        print('segunda-feira')
    elif numero == '3':
        print('ter√ßa-feira')
    elif numero == '4':
        print('quarta=feira')
    elif numero == '5':
        print('quinta=feira')
    elif numero == '6':
        print('sexta=feira')
    elif numero == '7':
        print('sabado')
    else:
        print('numero errado')

print('FIM DO PROGRAMA')

